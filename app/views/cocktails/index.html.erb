<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @cocktails.each do |cocktail| %>
    <% ig_a = [] %>
    <% cocktail.doses.each do |dose| %>
      <% ig_a << dose.ingredient.name %>
    <% end %>
    <div class="col">
      <div class="card h-100">
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, crop: :fill %>
        <% else %>
          <%= cl_image_tag("https://res.cloudinary.com/dnobflpja/image/upload/v1614944038/lxq87kuedu30bvsoo0mt.jpg") %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          <p class="card-text"><%= ig_a.join(',') %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">Last updated 3 mins ago</small>
        </div>
      </div>
    </div>
  <% end %>
</div>
