<div class="container">
  <h1><%= @cocktail.name %> details</h1>
  <% @cocktail.doses.each do |dose| %>
    <p> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to '-', dose_path(dose), method: :delete, data: { confirm: 'Sure ?'}, class: 'remove-link' %> </p>
  <% end %>
  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail)  %>
</div>


