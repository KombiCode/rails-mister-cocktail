<div class="container">
  <h1><%= @cocktail.name %> details</h1>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, crop: :fill %>
  <% else %>
    <%= cl_image_tag("https://res.cloudinary.com/dnobflpja/image/upload/v1614944038/lxq87kuedu30bvsoo0mt.jpg") %>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
    <p> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to '-', dose_path(dose), method: :delete, data: { confirm: 'Sure ?'}, class: 'remove-link' %> </p>
  <% end %>
  <%= link_to "Add dose", new_cocktail_dose_path(@cocktail)  %>
</div>


