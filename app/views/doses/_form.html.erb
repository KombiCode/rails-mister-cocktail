<%= simple_form_for [ @cocktail, @dose ] do |f| %>
  <div class="row mb-3 form-group">
    <%= f.input :description, class: 'form-control' %>
  </div>
  <div class="row mb-3 form-group">
    <%= f.association :ingredient, collection: Ingredient.all, prompt: "Choose an ingredient", class: 'form-control' %>
  </div>
  <div>
    <%= f.submit class: 'row mb-3 btn btn-primary' %>
  </div>
  <hr>
  <div>
  <%= link_to cocktails_path do %>
    <i class="fas fa-cocktail"></i> Back to cocktails
  <% end %>
  </div>
<% end %>
